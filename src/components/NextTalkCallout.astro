---
import LightCallout from "./LightCallout.astro";
---

<LightCallout>
  <div
    class="flex sm:flex-row flex-col max-w-xl mx-auto justify-between items-center gap-y-8 text-center"
  >
    <div>
      <p class="text-xl">Next talk</p>
      <p class="opacity-60">April 25th, 2024</p>
    </div>
    <div class="w-8 sm:w-[2px] h-[2px] sm:h-8 bg-gray-400 opacity-40"></div>
    <div class="flex">
      <!-- <Image src={render} alt="Render Atlanta Logo" /> -->
      <div class="flex flex-col justify-center">
        <h3 class="text-xl">
          <a
            href="https://frontenddesignconference.com/"
            target="_blank"
            class="block"
            rel="noopener noreferrer">Frontend Design Conference</a
          >
        </h3>
        <p class="opacity-60">St Petersburg, FL</p>
      </div>
    </div>
    <div class="w-8 sm:w-[2px] h-[2px] sm:h-8 bg-gray-400 opacity-40"></div>

    <a href="https://refactorconf.com/" class="underline underline-offset-4"
      >Tickets/info</a
    >
  </div>
</LightCallout>
