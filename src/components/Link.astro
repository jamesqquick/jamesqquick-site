---
export interface Props {
  href: string;
  text: string;
  classStr?: string;
  isFancy?: boolean;
  showUnderline?: boolean;
}
const { href, text, classStr = "", isFancy = true, showUnderline = true } = Astro.props;
---

<a
  class={`group transition-all duration-300 ease-in-out relative cursor-pointer ${classStr} ${
    isFancy ? "hover:text-bg" : "hover:text-brand"
  } z-20`}
  href={href}
  rel="noopener noreferrer"
  target="_blank"
>
  {text}{
    isFancy && (
      <span class={`absolute left-0 right-0 group-hover:-left-1 group-hover:-right-1 bottom-1  bg-white group-hover:bg-brand -z-10 group-hover:h-full group-hover:transition-all rounded-sm ${showUnderline ? "h-[1px]" : "h-0"}`} />
    )
  }
</a>
